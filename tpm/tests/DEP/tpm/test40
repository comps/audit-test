Test40 ()
{
	#
	# ID this function with -id argument
	#
	[ "$IDFLAG" ] && {
		echo "Test40 - Tspi_TPM_Delegate_UpdateVerificationCount01"
		return 0
	}

	echo
	echo -n "T40: Tspi_TPM_Delegate_UpdateVerificationCount01..."
	$TESTPATH/tpm/Tspi_TPM_Delegate_UpdateVerificationCount01 $VERSION 2>>eout >>sout
	case "$?" in
	0 )
		echo "successful."
		;;
	* )
		echo "Failed($ESTAT)."
		echo "-> Check `pwd`/eout for details"
		;;
	esac

	return 0
}
